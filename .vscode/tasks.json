{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Create Arduino Library",
            "type": "shell",
            "command": "python",
            "args": [
                "${workspaceFolder}/PDL_Dev_Tools/dev_tools.py",
                "create_new_library",
                "\"${input:libraryName}\""
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "Config Name",
            "type": "shell",
            "command": "python",
            "args": [
                "${workspaceFolder}/PDL_Dev_Tools/dev_tools.py",
                "config",
                "name",
                "\"${input:configName}\""
            ],
            "problemMatcher": []
        },
        {
            "label": "Config Email",
            "type": "shell",
            "command": "python",
            "args": [
                "${workspaceFolder}/PDL_Dev_Tools/dev_tools.py",
                "config",
                "email",
                "\"${input:configEmail}\""
            ],
            "problemMatcher": []
        },
        {
            "label": "Config Library Path",
            "type": "shell",
            "command": "python",
            "args": [
                "${workspaceFolder}/PDL_Dev_Tools/dev_tools.py",
                "config",
                "lib_path",
                "\"${input:configLibPath}\""
            ],
            "problemMatcher": []
        },
        {
            "label": "Config GitHub Token",
            "type": "shell",
            "command": "python",
            "args": [
                "${workspaceFolder}/PDL_Dev_Tools/dev_tools.py",
                "config",
                "github_token",
                "\"${input:configGitHubToken}\""
            ],
            "problemMatcher": []
        },
        {
            "label": "Config GitHub Org",
            "type": "shell",
            "command": "python",
            "args": [
                "${workspaceFolder}/PDL_Dev_Tools/dev_tools.py",
                "config",
                "github_org",
                "\"${input:configGitHubOrg}\""
            ],
            "problemMatcher": []
        },
        {
            "label": "Init and Update Submodules",
            "type": "shell",
            "command": "bash",
            "args": [
                "-c",
                "git submodule init && git submodule update --init --recursive"
            ],
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        }
    ],
    "inputs": [
        {
            "id": "libraryName",
            "type": "promptString",
            "description": "Enter the name of the new library:"
        },
        {
            "id": "configName",
            "type": "promptString",
            "description": "Enter the new configuration name:"
        },
        {
            "id": "configEmail",
            "type": "promptString",
            "description": "Enter the new configuration email:"
        },
        {
            "id": "configLibPath",
            "type": "promptString",
            "description": "Enter the new library path:"
        },
        {
            "id": "configGitHubToken",
            "type": "promptString",
            "description": "Enter the GitHub token:"
        },
        {
            "id": "configGitHubOrg",
            "type": "promptString",
            "description": "Enter the GitHub organization name:"
        }
    ]
}
